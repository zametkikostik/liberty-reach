# Liberty Reach Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ============================================================================
# AUTHENTICATION & ENCRYPTION
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-to-secure-random-string-32-chars
FEDERATION_KEY=change-me-to-secure-federation-key

# Generate with: openssl rand -hex 32
ENCRYPTION_MASTER_KEY=change-me-to-secure-random-string-32-chars
ENCRYPTION_SALT=change-me-to-secure-random-salt-32-chars

# ============================================================================
# DATABASE
# ============================================================================
POSTGRES_PASSWORD=your-secure-postgres-password
REDIS_PASSWORD=your-secure-redis-password

# ============================================================================
# TURN/STUN SERVER
# ============================================================================
TURN_PASSWORD=your-secure-turn-password

# ============================================================================
# GRAFANA
# ============================================================================
GRAFANA_PASSWORD=admin-change-me

# ============================================================================
# PUSH NOTIFICATIONS
# ============================================================================
# Firebase (Android)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# APNs (iOS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=io.libertyreach.app

# WNS (Windows)
WNS_PACKAGE_SID=your-wns-package-sid
WNS_SECRET=your-wns-secret

# ============================================================================
# OAUTH (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# ERROR TRACKING
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# SERVER URLs
# ============================================================================
SIGNALING_URL=wss://your-signaling-server.com
FEDERATION_URL=https://your-federation-server.com
API_URL=https://your-api-server.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_VOIP=true
ENABLE_VIDEO=true
ENABLE_P2P_CDN=true
ENABLE_FEDERATION=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_SECOND=100
RATE_LIMIT_BURST=200
