{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Liberty Reach",
  "version": "0.1.0",
  "identifier": "io.libertyreach.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Liberty Reach",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Social Networking",
    "shortDescription": "Post-Quantum Secure Messenger",
    "longDescription": "Liberty Reach is a post-quantum secure messenger with E2E encryption using CRYSTALS-Kyber-1024.",
    "copyright": "AGPL-3.0-or-later",
    "resources": []
  }
}
